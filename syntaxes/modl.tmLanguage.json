{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "modl",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#entityes"
		},
		{
			"include": "#supports"
		},
		{
			"include": "#comments"
		},
		{
			"include": "#variables"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [
			{	
				"name": "keyword.control.modl",
				"match": "\\b(if|else|while|for|return)\\b"
			},
			{	
				"name": "keyword.control.less.modl",
				"match": "\\b([0-9])+\\b"
			},
			{	
				"name": "keyword.control.less.modl",
				"match": "section (?=[a-zA-Z0-9]+\\(\\):)"
			}
			]
		},
		"strings": {
			"name": "string.quoted.double.modl",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.modl",
					"match": "\\\\."
				}
			]
		},
		"entityes": {
			"patterns": [
			{	
				"name": "entity.name.function.modl",
				"match": "\\b((([a-zA-Z0-9]))+\\(\\):)|:(end):|:(end)"
			},
			{	
				"name": "entity.name.class.modl",
				"match": "\\b(print|goto)\\b"
			}
			]
		},
		"supports": {
			"patterns": [
				{
					"name": "support.variable",
					"match": "\\b(true|false)\\b"
				}
			]
		},
		"comments": {
			"patterns": [
				{
					"name": "comment.modl",
					"match": "^\\s*\\s*#?region\\b|^\\s*\\s*#?endregion\\b"
				}
			]
		},
		"variables": {
			"patterns": [
				{
					"name": "variable.language",
					"match": "var:"
				}
			]
		}
	},
	"scopeName": "text.py.modl"
}